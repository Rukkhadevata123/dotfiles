{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------
    "layer": "top",
    "position": "top",
    "spacing": 4,
    "modules-left": [
        "custom/menu",
        "hyprland/workspaces",
        "custom/scratchpad"
    ],
    "modules-center": [
        "custom/wf-recorder",
        "hyprland/window",
        "custom/weather"
    ],
    "modules-right": [
        "custom/clipboard",
        "cpu",
        "memory",
        "temperature",
        "battery",
        "power-profiles-daemon",
        "network",
        "custom/playerctl",
        "idle_inhibitor",
        "pulseaudio",
        "backlight",
        "tray",
        "custom/notification",
        "clock",
        "custom/power"
    ],

    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------
    "custom/menu": {
        "format": "",  // Arch Linux 图标
        "on-click": "wofi --show drun",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name}: {icon}",
        "format-icons": {
            "1": "󰲠",
            "2": "󰲢", 
            "3": "󰲤",
            "4": "󰲦",
            "5": "󰲨",
            "urgent": "󰀨",
            "default": "󰧞"
        }
    },

    "custom/scratchpad": {
        "interval": 1,
        "format": "{}",
        "exec": "count=$(hyprctl clients -j | jq -r 'map(select(.workspace.name | startswith(\"special\"))) | length' 2>/dev/null || echo '0'); if [ \"$count\" -gt 0 ]; then if [ \"$count\" -eq 1 ]; then echo '󰖯'; else echo \"󰖲 $count\"; fi; else echo ''; fi",
        "on-click": "hyprctl dispatch togglespecialworkspace magic",
        "tooltip-format": "Scratchpad: {} windows"
    },

    "hyprland/window": {
        "format": "󰖯 {}",
        "max-length": 50,
        "separate-outputs": true
    },

    "clock": {
        "interval": 1,
        "format": "󰥔 {:%e %b %Y %H:%M:%S}",
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt>{calendar}</tt>",
        "on-click": "kitty calcurse"
    },

    "cpu": {
        "interval": 2,
        "format": "󰘚 {usage}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "kitty btop"
    },

    "memory": {
        "interval": 2,
        "format": "󰍛 {percentage}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "kitty btop",
        "tooltip-format": "Memory: {used:0.1f}G/{total:0.1f}G"
    },

    "temperature": {
        "critical-threshold": 80,
        "interval": 2,
        "format": "{icon} {temperatureC}°C",
        "format-icons": ["󱃃", "󰔐", "🌡️", "󰸁", "🔥"],
        "tooltip-format": "Temperature: {temperatureC}°C"
    },

    "battery": {
        "interval": 10,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format-charging": "󰂄 {capacity}%",
        "format": "{icon} {capacity}%",
        "format-icons": ["󱃍", "󰁺", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "tooltip-format": "{timeTo}, {power}W"
    },

    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "",       // 默认（平衡模式）
            "performance": "",  // 性能模式
            "balanced": "",     // 平衡模式
            "power-saver": ""   // 省电模式
        }
    },

    "network": {
        "interval": 5,
        "format-wifi": "{icon} {signalStrength}%",
        "format-ethernet": "󰈀",
        "format-disconnected": "󰖪",
        "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
        "tooltip-format-wifi": "{essid}: {ipaddr}",
        "tooltip-format-ethernet": "Ethernet: {ipaddr}",
        "on-click": "kitty nmtui"
    },

    "pulseaudio": {
        "scroll-step": 5,
        "format": "{icon} {volume}%{format_source}",
        "format-muted": "󰖁{format_source}",
        "format-source": " 󰍬",
        "format-source-muted": " 󰍭",
        "format-icons": {
            "headphone": "󰋋",
            "headset": "󰋎",
            "default": ["󰕿", "󰖀", "󰕾"]
        },
        "on-click": "pavucontrol",
        "on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-scroll-up": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-"
    },

    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "on-scroll-up": "brightnessctl -e4 -n2 set 5%+",
        "on-scroll-down": "brightnessctl -e4 -n2 set 5%-",
        "tooltip-format": "Brightness: {percent}%"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",  // 眼睛（表示活跃）
            "deactivated": "" // 闭眼（表示空闲）
        },
        "tooltip-format-activated": "Idle inhibitor: ON",
        "tooltip-format-deactivated": "Idle inhibitor: OFF"
    },

    "custom/notification": {
        "format": "{icon}",
        "format-icons": {
            "notification": "<span foreground='red'></span>",  // 有通知时显示红点
            "none": "",                                         // 无通知
            "dnd-notification": "<span foreground='red'></span>",  // 勿扰模式 + 通知
            "dnd-none": ""                                      // 勿扰模式
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "tooltip-format": "Left: Notifications\nRight: Do not disturb"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 6
    },

    "custom/power": {
        "format": "⏻",  // 电源符号
        "on-click": "wlogout",
        "tooltip": false
    },

    "custom/playerctl": {
        "interval": 2,
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "Playing": "󰏦",
            "Paused": "󰐍"
        },
        "exec": "playerctl metadata --format '{\"alt\": \"{{status}}\", \"tooltip\": \"{{playerName}}: {{markup_escape(title)}} - {{markup_escape(artist)}}\" }' 2>/dev/null || echo '{\"text\": \"󰎈\", \"tooltip\": \"No media playing\"}'",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl position 10+",
        "on-scroll-down": "playerctl position 10-"
    },

    "custom/clipboard": {
        "format": "󰨸",
        "interval": 1,
        "return-type": "json",
        "on-click": "cliphist list | wofi --dmenu | cliphist decode | wl-copy",
        "on-click-right": "cliphist list | wofi --dmenu -p \"Delete\" | cliphist delete",
        "on-click-middle": "rm -f ~/.cache/cliphist/db && notify-send \"Clipboard cleared\"",
        "exec": "echo '{\"tooltip\":\"󰨸 '$(cliphist list | wc -l)' items\\nLeft: select, Right: delete, Middle: clear\"}'",
        "tooltip": true
    },

    "custom/wf-recorder": {
        "interval": 2,
        "return-type": "json",
        "format": "{}",
        "exec": "if pgrep wf-recorder >/dev/null 2>&1; then echo '{\"class\": \"recording\", \"text\": \"󰑊\", \"tooltip\": \"Recording active - click to stop\"}'; else echo '{\"text\": \"\", \"tooltip\": \"No recording\"}'; fi",
        "on-click": "pkill wf-recorder && notify-send \"Recording stopped\""
    },

    "custom/weather": {
        "format": "{}",
        "interval": 3600,
        "exec": "curl -s 'wttr.in/Xihu,Hangzhou?format=1' 2>/dev/null | head -1 || echo ' N/A'",  // 使用天气图标
        "on-click": "xdg-open \"https://wttr.in/Xihu,Hangzhou\"",
        "tooltip": true
    }
}